@model Cineverse.Models.Projekcija

@{
    ViewData["Title"] = "Detalji";
}

<h1>Detalji</h1>

<div>
    <h4>Projekcija</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DvoranaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DvoranaId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lokacija)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lokacija)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Datum)
        </dt>
        <dd class="col-sm-10">
            @Model.Datum.ToString("dd/MM/yyyy")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vrijeme)
        </dt>
        <dd class="col-sm-10">
            @Model.Vrijeme.ToString("HH:mm")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Id)
        </dd>
    </dl>
</div>

<div>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Izmijeni</a>
    }
    <a asp-action="Index">Nazad na listu</a>
</div>
